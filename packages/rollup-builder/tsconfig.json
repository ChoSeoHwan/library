{
    "extends": "@choseohwan/tsconfig-base",
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "~src/*": ["src/*"],
            "~types/*" : ["types/*"]
        }
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["dist/**/*"]
}